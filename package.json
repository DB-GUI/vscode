{
	"name": "ppz",
	"displayName": "ppz",
	"description": "",
	"version": "0.0.0",
	"engines": {
		"vscode": "^1.64.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./app/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "ppz-container",
					"title": "PPZ",
					"icon": "assets/logo.svg"
				}
			]
		},
		"views": {
			"ppz-container": [
				{
					"id": "connections",
					"name": "连接",
					"contextualTitle": "PPZ",
					"icon": "assets/logo.svg"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "connections",
				"contents": "点击右上方 “+” 或下面按钮，以连接数据库\n[创建连接](command:ppz.addConnection)"
			}
		],
		"commands": [
			{
				"command": "ppz.addConnection",
				"title": "创建连接",
				"icon": "$(add)",
				"category": "ppz"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "ppz.addConnection",
					"when": "view == connections",
					"group": "navigation"
				}
			]
		}
	},
	"devDependencies": {
		"@types/node": "14.x",
		"@types/vscode": "^1.65.0",
		"@vscode/test-electron": "^2.1.3",
		"typescript": "^4.5.4"
	},
	"dependencies": {
		"@ppzp/type": "file:../type.js",
		"knex": "^1.0.3",
		"uuid": "^8.3.2"
	}
}
