{
	"name": "ppz",
	"displayName": "ppz",
	"description": "UI for database management",
	"version": "0.5.1",
	"publisher": "ppz",
	"icon": "assets/icon.png",
	"scripts": {
		"dist": "ts-node ./build/index.ts pro && cd dist && vsce package",
		"dev": "ts-node ./build/index.ts dev"
	},
	"keywords": [
		"database",
		"sql",
		"皮皮仔",
		"ppz",
		"navicat",
		"mysql",
		"sqlite",
		"dbms",
		"vscode",
		"db",
		"Postgresql"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ppz-pro/ppz.vscode.git"
	},
	"engines": {
		"vscode": "^1.47.3"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./extension.js",
	"l10n": "./l10n",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "ppz-container",
					"title": "%extension.viewsContainers.activitybar.title%",
					"icon": "assets/logo.svg"
				}
			]
		},
		"views": {
			"ppz-container": [
				{
					"id": "connection",
					"name": "%extension.views.ppz-container.connection.name%",
					"icon": "assets/logo.svg"
				},
				{
					"id": "help",
					"name": "%extension.views.ppz-container.help.name%",
					"icon": "assets/logo.svg"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "connection",
				"contents": "%extension.viewsWelcome.connection.contents%"
			},
			{
				"view": "help",
				"contents": "%extension.viewsWelcome.help.contents%"
			}
		],
		"commands": [
			{
				"command": "ppz.addConnection",
				"title": "%extension.commands.addConnection.title%",
				"icon": "$(add)",
				"category": "PPZ"
			},
			{
				"command": "ppz.github",
				"title": "%extension.commands.github.title%",
				"icon": "$(github-inverted)",
				"category": "PPZ"
			},
			{
				"command": "ppz.editConnection",
				"title": "%extension.commands.editConnection.title%",
				"icon": "$(edit)",
				"category": "PPZ"
			},
			{
				"command": "ppz.deleteConnection",
				"title": "%extension.commands.deleteConnection.title%",
				"icon": "$(trash)",
				"category": "PPZ"
			},
			{
				"command": "ppz.empty",
				"title": "%extension.commands.empty.title%",
				"icon": "$(trash)",
				"category": "PPZ"
			},
			{
				"command": "ppz.reloadTreeItemChildren",
				"title": "%extension.commands.reloadTreeItemChildren.title%",
				"icon": "$(refresh)",
				"category": "PPZ"
			},
			{
				"command": "ppz.systemTerminal",
				"title": "%extension.commands.systemTerminal.title%",
				"icon": "$(terminal)",
				"category": "PPZ"
			},
			{
				"command": "ppz.sqlTerminal",
				"title": "%extension.commands.sqlTerminal.title%",
				"icon": "$(terminal)",
				"category": "PPZ"
			},
			{
				"command": "ppz.exportDML",
				"title": "%extension.commands.exportDML.title%",
				"icon": "$(export)",
				"category": "PPZ"
			},
			{
				"command": "ppz.exportDDL",
				"title": "%extension.commands.exportDDL.title%",
				"icon": "$(export)",
				"category": "PPZ"
			},
			{
				"command": "ppz.exportBoth",
				"title": "%extension.commands.exportBoth.title%",
				"icon": "$(export)",
				"category": "PPZ"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "ppz.github",
					"when": "view == help",
					"group": "navigation"
				},
				{
					"command": "ppz.addConnection",
					"when": "view == connection",
					"group": "navigation"
				},
				{
					"command": "ppz.reloadTreeItemChildren",
					"when": "view == connection",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "ppz.reloadTreeItemChildren",
					"when": "view == connection && viewItem =~ /^connection$|^mysqlSchema$|^pgDatabase$|^pgSchema$|^sqlite3Connection$|^msDatabase$|^msSchema$/",
					"group": "inline"
				},
				{
					"command": "ppz.editConnection",
					"when": "view == connection && viewItem =~ /^connection$|^sqlite3Connection$/",
					"group": "1_conn@1"
				},
				{
					"command": "ppz.deleteConnection",
					"when": "view == connection && viewItem =~ /^connection$|^sqlite3Connection$/",
					"group": "1_conn@2"
				},
				{
					"command": "ppz.exportDML",
					"when": "view == connection && viewItem =~ /^mysqlSchema$|^table$|^pgSchema$|^sqlite3Connection$|^msSchema$/",
					"group": "2_export@1"
				},
				{
					"command": "ppz.exportDDL",
					"when": "view == connection && viewItem =~ /^mysqlSchema$|^table$|^pgSchema$|^sqlite3Connection$|^msSchema$/",
					"group": "2_export@2"
				},
				{
					"command": "ppz.exportBoth",
					"when": "view == connection && viewItem =~ /^mysqlSchema$|^table$|^pgSchema$|^sqlite3Connection$|^msSchema$/",
					"group": "2_export@3"
				},
				{
					"command": "ppz.sqlTerminal",
					"when": "view == connection && viewItem =~ /^connection$|^pgDatabase$|^sqlite3Connection$|^msDatabase$/",
					"group": "9_other@1"
				}
			]
		}
	},
	"devDependencies": {
		"@types/node": "14.x",
		"@types/vscode": "^1.47.3",
		"esbuild": "^0.15.8",
		"source-map-loader": "^4.0.1",
		"ts-loader": "^9.4.3"
	},
	"dependencies": {
		"@ppzp/bd": "^0.1.1",
		"@ppzp/context": "^0.0.0",
		"@ppzp/stupid": "^0.1.1",
		"@ppzp/type": "^0.0.4",
		"@vscode/l10n": "^0.0.14",
		"knex": "^2.1.0",
		"mysql2": "^2.3.3",
		"pg": "^8.7.3",
		"tedious": "^15.1.0",
		"uuid": "^8.3.2"
	}
}
