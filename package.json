{
	"name": "ppz",
	"displayName": "ppz",
	"description": "UI for database management",
	"version": "0.5.1",
	"publisher": "ppz",
	"icon": "assets/icon.png",
	"scripts": {
		"dist": "ts-node ./build/index.ts pro && cd dist && vsce package",
		"dev": "ts-node ./build/index.ts dev"
	},
	"keywords": [
		"database",
		"sql",
		"皮皮仔",
		"ppz",
		"navicat",
		"mysql",
		"sqlite",
		"dbms",
		"vscode",
		"db",
		"Postgresql"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ppz-pro/ppz.vscode.git"
	},
	"engines": {
		"vscode": "^1.47.3"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "ppz-container",
					"title": "PPZ",
					"icon": "assets/logo.svg"
				}
			]
		},
		"views": {
			"ppz-container": [
				{
					"id": "connection",
					"name": "连接",
					"icon": "assets/logo.svg"
				},
				{
					"id": "help",
					"name": "帮助和反馈",
					"icon": "assets/logo.svg"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "connection",
				"contents": "点击右上方 “+” 或下面按钮，以连接数据库\n[创建连接](command:ppz.addConnection)"
			},
			{
				"view": "help",
				"contents": "简介：管理数据库的图形化界面\n当前版本：v0.5.1-beta\n[$(preview)使用帮助](https://gitee.com/ppz-pro/ppz.vscode/wikis/pages)\n[$(comment)意见反馈](https://gitee.com/ppz-pro/ppz.vscode/issues)\n[$(bug)发现 bug！](https://gitee.com/ppz-pro/ppz.vscode/issues)\n[🐈可爱猫咪](command:ppz.love)\n[$(trash)清空 PPZ](command:ppz.empty)"
			}
		],
		"commands": [
			{
				"command": "ppz.addConnection",
				"title": "Add Connection",
				"icon": "$(add)",
				"category": "PPZ"
			},
			{
				"command": "ppz.github",
				"title": "open PPZ.vscode github",
				"icon": "$(github-inverted)",
				"category": "PPZ"
			},
			{
				"command": "ppz.editConnection",
				"title": "编辑连接",
				"icon": "$(edit)",
				"category": "PPZ"
			},
			{
				"command": "ppz.deleteConnection",
				"title": "删除连接",
				"icon": "$(trash)",
				"category": "PPZ"
			},
			{
				"command": "ppz.empty",
				"title": "Empty PPZ",
				"icon": "$(trash)",
				"category": "PPZ"
			},
			{
				"command": "ppz.reloadTreeItemChildren",
				"title": "Refresh Children",
				"icon": "$(refresh)",
				"category": "PPZ"
			},
			{
				"command": "ppz.terminal",
				"title": "系统终端",
				"icon": "$(terminal)",
				"category": "PPZ"
			},
			{
				"command": "ppz.ppzTerminal",
				"title": "SQL 终端",
				"icon": "$(terminal)",
				"category": "PPZ"
			},
			{
				"command": "ppz.exportDML",
				"title": "导出数据 DML",
				"icon": "$(export)",
				"category": "PPZ"
			},
			{
				"command": "ppz.exportDDL",
				"title": "导出表结构 DDL",
				"icon": "$(export)",
				"category": "PPZ"
			},
			{
				"command": "ppz.exportBoth",
				"title": "导出 DDL 和 DML",
				"icon": "$(export)",
				"category": "PPZ"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "ppz.github",
					"when": "view == help",
					"group": "navigation"
				},
				{
					"command": "ppz.addConnection",
					"when": "view == connection",
					"group": "navigation"
				},
				{
					"command": "ppz.reloadTreeItemChildren",
					"when": "view == connection",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "ppz.reloadTreeItemChildren",
					"when": "view == connection && viewItem =~ /^connection$|^mysqlSchema$|^pgDatabase$|^pgSchema$|^sqlite3Connection$|^msDatabase$|^msSchema$/",
					"group": "inline"
				},
				{
					"command": "ppz.editConnection",
					"when": "view == connection && viewItem =~ /^connection$|^sqlite3Connection$/",
					"group": "1_conn@1"
				},
				{
					"command": "ppz.deleteConnection",
					"when": "view == connection && viewItem =~ /^connection$|^sqlite3Connection$/",
					"group": "1_conn@2"
				},
				{
					"command": "ppz.exportDML",
					"when": "view == connection && viewItem =~ /^mysqlSchema$|^table$|^pgSchema$|^sqlite3Connection$|^msSchema$/",
					"group": "2_export@1"
				},
				{
					"command": "ppz.exportDDL",
					"when": "view == connection && viewItem =~ /^mysqlSchema$|^table$|^pgSchema$|^sqlite3Connection$|^msSchema$/",
					"group": "2_export@2"
				},
				{
					"command": "ppz.exportBoth",
					"when": "view == connection && viewItem =~ /^mysqlSchema$|^table$|^pgSchema$|^sqlite3Connection$|^msSchema$/",
					"group": "2_export@3"
				},
				{
					"command": "ppz.ppzTerminal",
					"when": "view == connection && viewItem =~ /^connection$|^pgDatabase$|^sqlite3Connection$|^msDatabase$/",
					"group": "9_other@1"
				}
			]
		}
	},
	"devDependencies": {
		"@types/node": "14.x",
		"@types/vscode": "^1.47.3",
		"esbuild": "^0.15.8",
		"source-map-loader": "^4.0.1",
		"ts-loader": "^9.4.3"
	},
	"dependencies": {
		"@ppzp/bd": "^0.1.1",
		"@ppzp/context": "^0.0.0",
		"@ppzp/stupid": "^0.1.1",
		"@ppzp/type": "^0.0.4",
		"knex": "^2.1.0",
		"mysql2": "^2.3.3",
		"pg": "^8.7.3",
		"tedious": "^15.1.0",
		"uuid": "^8.3.2"
	}
}
