{
	"name": "ppz",
	"displayName": "ppz",
	"description": "",
	"version": "0.0.1",
	"publisher": "ppz",
	"icon": "./assets/icon.png",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ppz-pro/ppz.vscode.git"
	},
	"engines": {
    "vscode": "^1.47.3"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./app/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "ppz-container",
					"title": "PPZ",
					"icon": "assets/logo.svg"
				}
			]
		},
		"views": {
			"ppz-container": [
				{
					"id": "connection",
					"name": "连接",
					"icon": "assets/logo.svg"
				},
				{
					"id": "about",
					"name": "关于",
					"icon": "assets/logo.svg"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "connection",
				"contents": "点击右上方 “+” 或下面按钮，以连接数据库\n[创建连接](command:ppz.addConnection)"
			}
		],
		"commands": [
			{
				"command": "ppz.addConnection",
				"title": "Add Connection",
				"icon": "$(add)",
				"category": "PPZ"
			},
			{
				"command": "ppz.editConnection",
				"title": "更新连接",
				"icon": "$(edit)",
				"category": "PPZ"
			},
			{
				"command": "ppz.deleteConnection",
				"title": "删除连接",
				"icon": "$(trash)",
				"category": "PPZ"
			},
			{
				"command": "ppz.empty",
				"title": "Empty PPZ",
				"icon": "$(trash)",
				"category": "PPZ"
			},
			{
				"command": "ppz.refreshConnections",
				"title": "刷新连接",
				"icon": "$(refresh)",
				"category": "PPZ"
			},
			{
				"command": "ppz.refreshConnection",
				"title": "Refresh Connection",
				"icon": "$(refresh)",
				"category": "PPZ"
			},
			{
				"command": "ppz.refreshDatabase",
				"title": "Refresh Database",
				"icon": "$(refresh)",
				"category": "PPZ"
			},
			{
				"command": "ppz.terminal",
				"title": "交互模式",
				"icon": "$(terminal)",
				"category": "PPZ"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "ppz.addConnection",
					"when": "view == connection",
					"group": "navigation"
				},
				{
					"command": "ppz.refreshConnections",
					"when": "view == connection",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "ppz.deleteConnection",
					"when": "view == connection && viewItem == connection || viewItem == 'sqlite3-connection'"
				},
				{
					"command": "ppz.terminal",
					"when": "view == connection && viewItem == connection || viewItem == 'sqlite3-connection'",
					"group": "inline"
				},
				{
					"command": "ppz.editConnection",
					"when": "view == connection && viewItem == connection || viewItem == 'sqlite3-connection'"
				},
				{
					"command": "ppz.refreshConnection",
					"when": "view == connection && viewItem == connection || viewItem == 'sqlite3-connection'",
					"group": "inline"
				},
				{
					"command": "ppz.refreshDatabase",
					"when": "view == connection && viewItem == database",
					"group": "inline"
				}
			]
		}
	},
	"devDependencies": {
		"@types/node": "14.x",
		"@types/vscode": "^1.65.0"
	},
	"dependencies": {
		"@ppzp/mixin": "^0.0.0",
		"@ppzp/type": "^0.0.4",
		"knex": "^2.0.0",
		"mysql2": "^2.3.3",
		"pg": "^8.7.3",
		"sqlite3": "^5.0.5",
		"uuid": "^8.3.2"
	}
}
