{
  // https://typestrong.org/ts-node/docs/paths
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "allowJs": true,
    "target": "ES6",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "jsx": "react-jsx", // https://www.typescriptlang.org/tsconfig#jsx
    "paths": {
      "@/*": [
        "./src/*",
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
